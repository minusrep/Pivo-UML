@startuml

package "Citizens"
{
    package "Configs"
    {
        class CitizensConfig
        {
            +string[] names
            +float startMoveSpeed
            +Dictionary<string, int> minimumNeedThresholds
        }
    }

    package "Models"
    {
        class Citizen 
        {
            +int id
            +string name
            +Dictionary<string, Resource> needs
            +Dictionary<string, int> minimumNeedThresholds
            +CitizenStateMachine stateMachine
            +Vector2 position
            +float moveSpeed
        }
    
    'TODO: Подумать над управлением состояний'
    package "StateMachine" {
    class CitizenStateMachine 
    {
        +CitizenState currentState
    }   
}

@enduml